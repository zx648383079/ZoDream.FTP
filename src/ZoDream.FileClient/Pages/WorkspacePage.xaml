<?xml version="1.0" encoding="utf-8" ?>
<Page
    x:Class="ZoDream.FileClient.Pages.WorkspacePage"
    xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
    xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
    xmlns:ctl="using:ZoDream.FileClient.Controls"
    xmlns:cvt="using:ZoDream.FileClient.Converters"
    xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
    xmlns:local="using:ZoDream.FileClient.Pages"
    xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
    xmlns:vm="using:ZoDream.FileClient.ViewModels"
    mc:Ignorable="d">
    <Page.DataContext>
        <vm:WorkspaceViewModel />
    </Page.DataContext>
    <Page.Resources>
        <ResourceDictionary Source="ms-appx:///Themes/InputStyle.xaml" />
    </Page.Resources>

    <Grid>
        <Grid.RowDefinitions>
            <RowDefinition Height="auto" />
            <RowDefinition />
            <RowDefinition Height="auto" />
            <RowDefinition Height="auto" />
        </Grid.RowDefinitions>
        <Grid.ColumnDefinitions>
            <ColumnDefinition />
            <ColumnDefinition />
        </Grid.ColumnDefinitions>
        <StackPanel Orientation="Horizontal">
            <Button
                Command="{Binding OpenCommand}"
                Content="&#xE7AC;"
                Style="{StaticResource LargeIconBtn}"
                ToolTipService.ToolTip="Open Connection" />
            <Button
                Command="{Binding StopCommand}"
                Content="&#xE8CD;"
                Style="{StaticResource LargeIconBtn}"
                ToolTipService.ToolTip="Stop" />
            <ToggleButton
                Content="{Binding IsLocked, Converter={StaticResource LockCvt}}"
                IsChecked="{Binding IsLocked, Mode=TwoWay}"
                Style="{StaticResource LargeIconBtn}"
                ToolTipService.ToolTip="Sync Locked" />
        </StackPanel>
        <Border
            Grid.Row="1"
            BorderBrush="{StaticResource CardStrokeColorDefaultBrush}"
            BorderThickness="0,0,1,0">
            <ctl:ExplorerView
                BackCommand="{Binding LocalStorage.BackCommand}"
                GoCommand="{Binding LocalStorage.GoCommand}"
                HomeCommand="{Binding LocalStorage.HomeCommand}"
                ItemsSource="{Binding LocalStorage.Items}"
                RefreshCommand="{Binding LocalStorage.RefreshCommand}"
                RoutePath="{Binding LocalStorage.RoutePath}" />
        </Border>
        <ctl:ExplorerView
            Grid.Row="1"
            Grid.Column="1"
            BackCommand="{Binding RemoteStorage.BackCommand}"
            GoCommand="{Binding RemoteStorage.GoCommand}"
            HomeCommand="{Binding RemoteStorage.HomeCommand}"
            ItemsSource="{Binding RemoteStorage.Items}"
            RefreshCommand="{Binding RemoteStorage.RefreshCommand}"
            RoutePath="{Binding RemoteStorage.RoutePath}" />

        <TabView
            Grid.Row="2"
            Grid.ColumnSpan="2"
            Height="200"
            CanReorderTabs="False"
            IsAddTabButtonVisible="False"
            TabWidthMode="Equal">
            <TabViewItem Header="输出" IsClosable="False">
                <RichTextBlock x:Name="PART_ConsoleBlock" ScrollViewer.VerticalScrollBarVisibility="Auto" />
            </TabViewItem>
            <TabViewItem Header="传输列表" IsClosable="False">
                <ListBox ItemsSource="{Binding Transfer.Items}" Style="{StaticResource CustomListBox}">
                    <ListBox.ItemTemplate>
                        <DataTemplate x:DataType="vm:TransferItemViewModel">
                            <Grid>
                                <Grid.ColumnDefinitions>
                                    <ColumnDefinition Width="48" />
                                    <ColumnDefinition />
                                </Grid.ColumnDefinitions>
                                <FontIcon Glyph="{x:Bind cvt:ConverterHelper.FormatIcon(Status), Mode=OneWay}" Style="{StaticResource HeaderIcon}" />
                                <StackPanel Grid.Column="1" VerticalAlignment="Center">
                                    <Grid>
                                        <Grid.ColumnDefinitions>
                                            <ColumnDefinition />
                                            <ColumnDefinition />
                                            <ColumnDefinition />
                                        </Grid.ColumnDefinitions>
                                        <Grid.RowDefinitions>
                                            <RowDefinition />
                                            <RowDefinition Height="auto" />
                                        </Grid.RowDefinitions>
                                        <TextBlock VerticalAlignment="Center" Text="{x:Bind LocalName}" />
                                        <TextBlock
                                            Grid.Row="1"
                                            VerticalAlignment="Center"
                                            FontSize="5"
                                            Foreground="{StaticResource TextFillColorSecondaryBrush}"
                                            Text="{x:Bind LocalPath}" />
                                        <FontIcon
                                            Grid.RowSpan="2"
                                            Grid.Column="1"
                                            VerticalAlignment="Center"
                                            Glyph="{x:Bind cvt:ConverterHelper.FormatIcon(Type)}" />
                                        <TextBlock
                                            Grid.Column="2"
                                            HorizontalAlignment="Right"
                                            VerticalAlignment="Center"
                                            Text="{x:Bind RemoteName}" />
                                        <TextBlock
                                            Grid.Row="1"
                                            Grid.Column="2"
                                            VerticalAlignment="Center"
                                            FontSize="5"
                                            Foreground="{StaticResource TextFillColorSecondaryBrush}"
                                            Text="{x:Bind LocalPath}" />
                                    </Grid>
                                    <StackPanel Orientation="Vertical" Visibility="{x:Bind cvt:ConverterHelper.VisibleIfWorking(Status), Mode=OneWay}">
                                        <ProgressBar Maximum="100" Value="{x:Bind Progress, Mode=OneWay}" />
                                        <TextBlock Style="{StaticResource MetaLabelStyle}" Text="{x:Bind Message, Mode=OneWay}" />
                                    </StackPanel>
                                </StackPanel>
                            </Grid>
                        </DataTemplate>
                    </ListBox.ItemTemplate>
                </ListBox>
            </TabViewItem>
        </TabView>
    </Grid>
</Page>
